.history-item
    height: 3em;
    line-height: 3em;
.history-item.status-success
    background-color: rgba(0,255,125,.5);
.history-item.status-failed
    background-color: rgba(255,0,0,.3);
.error-message
    font-size: 90%;
    display: inline-block;;
    line-height: 1em;
.input-group
    margin-bottom: 1em;
    .input-group-addon
        min-width: 10rem;
    input
        height 2.6em;
        line-height: 2.6em;
        border-radius: .2em;
        padding: 0 .6em
        border: solid 1px rgba(0,0,0,.2);
        display: inline-block;
.apikey-info
    font-size: 1.2em;
    border: solid 1px rgba(0,0,0,.2);
    border-radius: .2em;
    padding: .3em;
    margin: .6em 0;
    line-height: 22px;
.apikey
    height 2.6em;
    line-height: 2.6em;
    border-radius: .2em;
    padding: 0 .6em
    border: solid 1px rgba(0,0,0,.2);
    display: inline-block;
.disabled
    color: rgba(0,0,0,.5);
    background-color: rgba(0,0,0,.2);
.hide
    display: none;
